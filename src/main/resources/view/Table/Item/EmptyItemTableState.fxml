<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.net.URL?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" styleClass="empty-item-table" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@../../css/table.css" />
      <URL value="@../../css/emptyTable.css" />
   </stylesheets>
   <children>
      <VBox alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../images/empty-item.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </ImageView>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Try">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label styleClass="command-text" text="add-item" />
                  <Label text="or">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#handleAddItemClicked" styleClass="action-button">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../images/file-plus.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
