<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" stylesheets="@../css/emptyTable.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER">
         <ImageView fitHeight="180.0" fitWidth="317.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../images/empty-product.png" />
            </image>
            <VBox.margin>
               <Insets bottom="20.0" top="20.0" />
            </VBox.margin>
         </ImageView>
         <HBox alignment="CENTER" spacing="10">
            <Label text="Try the" textFill="#757677">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label styleClass="command-text" text="add" textFill="#858687">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label layoutX="10.0" layoutY="230.0" text="command or click" textFill="#757677">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onMouseClicked="#handleAddProductClicked" styleClass="primary-button" text="Add Product" textFill="WHITE">
               <graphic>
                  <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/plus-circle.png" />
                     </image>
                  </ImageView>
               </graphic>
               <padding>
                  <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
               </padding>
            </Button>
         </HBox>
      </VBox>
   </children>
</HBox>
