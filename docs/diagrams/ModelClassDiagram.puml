@startuml
!include style.puml

skinparam titleFontColor black
skinparam Class {
    FontSize 15
    StereotypeFontSize 13
    BackgroundColor MODEL_COLOR
    BackgroundColor<<Hidden>> #FFFFFF
}

skinparam arrowColor MODEL_COLOR
skinparam arrowFontSize 13

Package Model {
interface "<<interface>>\nReadOnlyIBook" as ReadOnlyIBook
interface "<<interface>>\nModel" as Model
interface "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs

class IBook
class ModelManager
class UserPrefs

class UniqueProductList
class Product
class Name
class Category
class ExpiryDate
class Description
class Price

}

Class HiddenOutside <<Hidden>>
HiddenOutside ..> Model

IBook .up.|> ReadOnlyIBook
ModelManager .up.|> Model
UserPrefs .up.|> ReadOnlyUserPrefs

Model .left.> ReadOnlyIBook
Model .right.> ReadOnlyUserPrefs
ModelManager -left-> "1" IBook
ModelManager -right-> "1" UserPrefs

IBook *--> "1" UniqueProductList
UniqueProductList ---> "~* all" Product

Product *--> Name
Product *--> Category
Product *--> ExpiryDate
Product *--> Description
Product *--> Price

ModelManager -->"~* filtered" Product
@enduml
