@startuml
!include style.puml

'Local overrides (copy this section)
'Change the color here
!$theme_color = MODEL_COLOR

skinparam TitleFontColor $theme_color
skinparam Class {
    FontColor $theme_color
    StereotypeFontColor $theme_color
    BorderColor $theme_color
    FontColor<<Hidden>> #FFFFFF
    StereotypeFontColor<<Hidden>> #FFFFFF
    BorderColor<<Hidden>> #FFFFFF
}
'End of local overrides

package Model {
    interface "<<interface>>\nReadOnlyIBook" as ReadOnlyIBook
    interface "<<interface>>\nModel" as Model
    interface "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs

    class IBook
    class ModelManager
    class UserPrefs

    class UniqueProductList
    class Product
    class Name
    class Category
    class ExpiryDate
    class Description
    class Price
}

class HiddenOutside <<Hidden>>
HiddenOutside ..> Model

IBook .up.|> ReadOnlyIBook
ModelManager .up.|> Model
UserPrefs .up.|> ReadOnlyUserPrefs

Model .left.> ReadOnlyIBook
Model .right.> ReadOnlyUserPrefs
ModelManager -left-> "1" IBook
ModelManager -right-> "1" UserPrefs

IBook *--> "1" UniqueProductList
UniqueProductList ---> "~* all" Product

Product *--> Name
Product *--> Category
Product *--> ExpiryDate
Product *--> Description
Product *--> Price

ModelManager -->"~* filtered" Product
@enduml
