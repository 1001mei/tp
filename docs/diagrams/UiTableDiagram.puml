@startuml
!include style.puml

'Local overrides (copy this section)
'Change the color here
!$theme_color = UI_COLOR

skinparam TitleFontColor $theme_color
skinparam Class {
    FontColor $theme_color
    StereotypeFontColor $theme_color
    BorderColor $theme_color
    FontColor<<Hidden>> #FFFFFF
    StereotypeFontColor<<Hidden>> #FFFFFF
    BorderColor<<Hidden>> #FFFFFF
}
'End of local overrides

package UI {
    class "{abstract}\nUiComponent" as UiComponent
    class MainWindow

    package Table <<Rectangle>> {
        class ProductCard
        class Table
        class TableContent
        class TableHeader
    }
}

package Model <<Rectangle>> {
}

package Logic <<Rectangle>> {
}

MainWindow *-right-> "1" Table

Table *--> "1" TableContent
Table *--> "1" TableHeader

TableContent *-> "*" ProductCard

ProductCard --|> UiComponent
Table --|> UiComponent
TableContent --|> UiComponent
TableHeader --|> UiComponent

TableContent ..> Model
MainWindow ..> Model
ProductCard ..> Model

UiComponent -left-> MainWindow

MainWindow -right-> Logic

@enduml
