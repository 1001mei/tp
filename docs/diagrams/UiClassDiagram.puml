@startuml
!include style.puml

'Local overrides (copy this section)
'Change the color here
!$theme_color = UI_COLOR

skinparam TitleFontColor $theme_color
skinparam Class {
    FontColor $theme_color
    StereotypeFontColor $theme_color
    BorderColor $theme_color
    FontColor<<Hidden>> #FFFFFF
    StereotypeFontColor<<Hidden>> #FFFFFF
    BorderColor<<Hidden>> #FFFFFF
}
'End of local overrides

package UI {
   class "<<interface>>\nUi" as Ui
   class "{abstract}\nUiPart" as UiPart
   class "{abstract}\nUiComponent" as UiComponent
   class UiManager
   class MainWindow
   class MenuToolbar
   class CommandBox
   class ResultWindow

   package Table <<Rectangle>> {
   }

   package Popup <<Rectangle>> {
   }
}

package Model <<Rectangle>> {
}

package Logic <<Rectangle>> {
}


class HiddenOutside<<Hidden>>
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> "1" MainWindow
MainWindow *--> "1" MenuToolbar
MainWindow *--> "1" CommandBox
MainWindow *--> "1" ResultWindow
MainWindow --> Table
MainWindow --> Popup

MenuToolbar -up-|> UiComponent
CommandBox -up-|> UiComponent
ResultWindow -up-|> UiComponent

MainWindow -up-|> UiPart
UiComponent -up-|> UiPart

UiManager --> Logic
MainWindow --> Logic
Popup .right.> Logic

MainWindow .[norank].> Model
Popup .right.> Model
Table .down.> Model

UiComponent -left-> MainWindow

@enduml
