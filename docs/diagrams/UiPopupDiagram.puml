@startuml
!include style.puml

'Local overrides (copy this section)
'Change the color here
!$theme_color = UI_COLOR

skinparam TitleFontColor $theme_color
skinparam Class {
    FontColor $theme_color
    StereotypeFontColor $theme_color
    BorderColor $theme_color
    FontColor<<Hidden>> #FFFFFF
    StereotypeFontColor<<Hidden>> #FFFFFF
    BorderColor<<Hidden>> #FFFFFF
}
'End of local overrides

package UI {
    class "{abstract}\nUiComponent" as UiComponent
    class MainWindow

    package Popup as PopupContainer {
       class "{abstract}\nPopup" as Popup
       class PopupHandler
       class PopupAdd
       class PopupDelete
       class PopupUpdate
    }
}

package Model <<Rectangle>> {
}

package Logic <<Rectangle>> {
}


MainWindow *--> "1" PopupHandler

PopupHandler *-->  "1" PopupAdd
PopupHandler *-->  "1" PopupDelete
PopupHandler *-->  "1" PopupUpdate

PopupAdd -up-|> Popup
PopupDelete -up-|> Popup
PopupUpdate -up-|> Popup

Popup -up-|> UiComponent


PopupAdd ..> Logic
PopupUpdate ..> Model
PopupUpdate ..> Logic
PopupDelete ..> Model
PopupDelete ..> Logic

UiComponent -left-> MainWindow

@enduml
